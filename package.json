  "scripts": {
    "#": "=== CONFIG COMMANDS ===",
    "config:all": "yarn config:dev && yarn docker:down && yarn config:test && yarn docker:down",
    "config:dev": "cross-env NODE_ENV=development yarn docker:up && yarn db:create:dev && yarn migrate",
    "config:test": "cross-env NODE_ENV=test yarn docker:up && yarn db:create:test && yarn migrate",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "##": "=== RUN COMMANDS ===",
    "start": "cross-env NODE_ENV=development nodemon",
    "###": "=== TEST COMMANDS ===",
    "test": "cross-env NODE_ENV=test jest --watch",
    "test:c": "cross-env NODE_ENV=test jest --coverage",
    "####": "=== DATABASE ===",
    "sequelize": "sequelize-cli",
    "db:create:dev": "cross-env NODE_ENV=development sequelize-cli db:create",
    "db:create:test": "cross-env NODE_ENV=test sequelize-cli db:create",
    "migrate": "sequelize-cli db:migrate"
  }
